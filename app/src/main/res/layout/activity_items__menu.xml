<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Items.Items_Menu">
    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme..AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme..PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:layout_marginTop="60dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="80dp" android:orientation="horizontal"
                      android:layout_margin="2dp" android:id="@+id/lay_orders"
                      android:background="@drawable/shape_others">

            <ImageView

                    android:layout_height="wrap_content" android:id="@+id/imageView"
                    android:layout_weight="1" android:layout_width="70dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_shopping_cart_black_24dp"/>
            <TextView
                    android:text="Orders"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/item_order" android:layout_weight="1"
                    android:textSize="30sp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="80dp" android:orientation="horizontal"
                      android:layout_margin="2dp" android:id="@+id/lay_res" android:background="@drawable/shape_others">

            <ImageView
                    android:padding="5dp"
                    android:layout_height="wrap_content" android:id="@+id/rimage"
                    android:layout_weight="1" android:layout_width="70dp"
                    app:srcCompat="@drawable/ic_pause_circle_filled_black_24dp"/>
            <TextView
                    android:text="Reserved"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/item_reserved" android:layout_weight="1"
                    android:textSize="30sp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="80dp" android:orientation="horizontal"
                      android:layout_margin="2dp" android:id="@+id/lay_pawned"
                      android:background="@drawable/shape_others">

            <ImageView
                    android:padding="5dp"
                    android:layout_height="wrap_content" android:id="@+id/pimage"
                    android:layout_weight="1" android:layout_width="70dp"
                    app:srcCompat="@drawable/ic_shopping_basket_black_24dp"/>
            <TextView
                    android:text="Pawned"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/item_pawned" android:layout_weight="1"
                    android:textSize="30sp"/>

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.NoActionBar">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pawnshop_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Product Item"
                    android:textColor="@color/colorDGray"
                    android:textSize="22sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_orange_dark"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="â‚± 6200.75"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="Description"
                    android:textColor="@color/colorDGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Information"
                    android:textColor="@color/colorGray"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="Category"
                    android:textColor="@color/colorDGray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/item_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:padding="5dp"
                    android:text="Jewelry"
                    android:textColor="@color/colorGray"
                    android:textSize="18sp" />
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:layout_marginLeft="10dp"
                          android:textSize="17sp"
                          android:text="Receipt"
                          android:textColor="@color/colorDGray"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" app:srcCompat="@drawable/pawnshop_background"
                        android:id="@+id/product_receipt"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/order_info_layout"
                    >
                    <TextView
                        android:id="@+id/order_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:text="Order Information"
                        android:textColor="@color/colorPrimaryDark"


                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/no_orders_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Not Under an Order"
                        android:textColor="@color/colorDGray"
                        android:textSize="22dp"
                        android:visibility="gone" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/order_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp" />

                    <TextView
                            android:id="@+id/see_all_order_history"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10dp"
                            android:text="Order History"
                            android:textColor="@color/colorDGray"
                            android:textSize="20sp" android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/reservation_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_others"
                    android:orientation="vertical" android:visibility="visible">

                <TextView
                        android:id="@+id/reservation_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:text="Reservation Information"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:visibility="visible"/>

                <TextView
                        android:id="@+id/no_reserve_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Not Under Reservation"
                        android:textColor="@color/colorDGray"
                        android:textSize="22dp"
                        android:visibility="gone"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/reserve_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"/>
                <TextView
                        android:id="@+id/sarh"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="10dp"
                        android:text="Reservation History"
                        android:textColor="@color/colorDGray"
                        android:textSize="20sp" android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/payment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Payment Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/no_pay_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Not Paid Yet"
                    android:textColor="@color/colorDGray"
                    android:textSize="22dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/paypal_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:padding="5dp"
                    android:text="Paypal Payment ID:"
                    android:textColor="@color/colorDGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pay_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:padding="5dp"
                    android:text="Payment Amount: â‚± "
                    android:textColor="@color/colorDGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Date_Paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:padding="5dp"
                    android:text="Payment Date:"
                    android:textColor="@color/colorDGray"
                    android:textSize="18sp" />

            </LinearLayout>
                    <Button
                        android:id="@+id/seller_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Received Payment"
                        android:visibility="gone" />

            <LinearLayout
                android:id="@+id/order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Pending Orders"

                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_orders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/all_pending_orders"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="SEE ALL"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reserve_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Pending Reservations"

                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_reserve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/all_pending_reserve"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="SEE ALL"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/promotion_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_others"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="Promotion Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/days_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    android:text="Not under promotion"
                    android:textColor="@color/colorGray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/promotion_history"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="See Promotion History"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>

